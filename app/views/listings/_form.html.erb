<div class="row-fluid">
<%= form_for [@area, @listing] do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="span4 offset4">

  <div class="actions">
	<%= collection_select(:listing, :category_id, Category.all, :id, :name, { :prompt => true }) %><br>
	<%= collection_select(:listing, :area_id, Area.all, :id, :name, { :prompt => true }) %><br>
	
	Company<br>
	<%= f.text_field :company %><br>
	Industry<br>
	<%= f.text_field :industry %><br>
	Address 1 <br>
	<%= f.text_field :address1 %><br>
	Address 2 <br>
	<%= f.text_field :address2 %><br>
	City <br>
	<%= f.text_field :city %><br>
	State <br>
	<%= f.text_field :state %><br>
	Zip <br>
	<%= f.text_field :zip_code %><br>
	Phone<br>
	<%= f.text_field :phone %><br>
	Website<br>
	<%= f.text_field :website %><br>
	Discount in Spanish<br>
	<%= f.text_area :discount, :class => "hours-css" %><br>
	Discount in English<br>
	<%= f.text_area :discount_english, :class => "hours-css" %><br>
	Hours of Operation:<br>
	<%= f.text_area :hours, :class => "hours-css" %>
	Google API Reference:<br>
	<%= f.text_area :reference, :class => "hours-css" %>


    <%= f.submit %>
  </div>

</div>
<% end %>
</div>