
<div class="row-fluid">


	<div class="row-fluid no-space">
	<div class="span12">

		<div class="category-list">
				<div class="span4 offset2">	


				<div class="box-1-show">
								<%= search_form_for @search do |f| %>
								<div class="search-bar">
									<%= f.text_field :company_or_industry_or_first_name_or_last_name_cont, :class=> "search-css", :placeholder => "Search" %>
								</div>
								<div class="actions"<%= f.submit %> </div>	
								<% end %>
							</div>
				</div>				

				<div class="span4">	
							<div class="box-1-show">
									<%= search_form_for @search do |f| %>
									<div class="search-bar">
										<%= text_field_tag :search, params[:search], :class=> "search-css", :placeholder => "Location" %>
									</div>
									<div class="actions"<%= f.submit %> </div>	
									<% end %>
								</div>				
				</div>					


		</div>

	</div>
	</div>
		
<div class="row-fluid no-space">
		
<div class="span3">	

</div>	

<div class="span6">
	

	
	
		<% @listings.each do |listing| %>
		
			<div class="row-fluid">
			<div class="industry-badge-show">
			<%= listing.industry %>
			</div>
			</div>
			
			<div id="listing-list-show">
					
					<div class="row-fluid">
						
						<div class="span12">
					
							<div id="listing-name-css">
								<div id="listing-company-css">
							<%= link_to listing_path(listing), :class =>"listing-company-css" do %>		
							<%= listing.company %><br>
							<% end %>
							</div>
					
					</div>
						<% if !listing.address1.blank? -%>
					 	<%= listing.address1 %><br>
						<% end %>
						<% if !listing.address2.blank? -%>
						<%= listing.address2 %><br>
						<% end %>
						<% if !listing.city.blank? -%>
						<%= listing.city  %>
						<% end %> 
						<% if !listing.state.blank? -%>
						<%= listing.state  %><br>
						<% end %>  
						<%= listing.zip_code %><br>
						<% if !listing.phone.blank? -%>
						<%= number_to_phone(listing.phone, area_code: true) %><br>
						<% end %>  
						<% if !listing.website.blank? -%>
						<%= link_to "Website", "#{listing.website}"%><br>
						<% end %>  

						</div>
					
						
					
							
						</div>
						
			</div>
		
		
		<% end %>
						
				
			
</div>


<div class="span3">

	</div>
	
</div>


	
</div>

<%= link_to 'New Listing', new_listing_path %>

