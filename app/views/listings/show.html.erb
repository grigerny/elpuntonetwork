<div class="row-fluid no-space">
	<div class="span12">
		<div class="category-list">
				<div class="span4 offset2">	

				<div class="box-1-show">
								<%= search_form_for @search, url: area_listings_path(1) do |f| %>
								<div class="search-bar">
									<%= f.text_field :company_or_industry_or_first_name_or_last_name_cont, :class=> "search-css", :placeholder => "Search" %>
								</div>
								<div class="actions"<%= f.submit %> 
								</div>	
								<% end %>
				</div>
				</div>				

				<div class="span4">	
							<div class="box-1-show">
									<%= search_form_for @search, url: area_listings_path(1) do |f| %>
									<div class="search-bar">
										<%= text_field_tag :search, params[:search], :class=> "search-css", :placeholder => "Location" %>
									</div>
									<div class="actions"<%= f.submit %> </div>	
									<% end %>
							</div>				
				</div>					


		</div>

	</div>
</div>

	
	<div class="row-fluid no-space">	
		<div class="css-overlap-wrapper">
		
		<div class="container">
		<div class="span12">	
		<div id="listing-list-show">
			
				<div class="row-fluid no-space">
					
					<div class="span9">	
					<div id="listing-name-css">
								<div id="listing-company-css">
									
									<div class="row-fluid">
									<div class="listing-show-headline">
										<%= @listing.company %><br>
									</div>
									</div>
									
									<div class="listing-show-business-info">
										<% if !@listing.address1.blank? -%>
											<%= @listing.address1 %><br>
											<% end %>
											<% if !@listing.address2.blank? -%>
												<%= @listing.address2 %><br>
												<% end %>
												<% if !@listing.city.blank? -%>
													<%= @listing.city %>
													<% end %> 
													<% if !@listing.state.blank? -%>
														<%= @listing.state %>
														<% end %> 
														<% if !@listing.zip_code.blank? -%>
															<%= @listing.zip_code%><br>
															<% end %> 
															<% if !@listing.phone.blank? -%>
																<%= number_to_phone(@listing.phone, area_code: true) %><br>
																<% end %>
																<%= link_to @listing.website.sub(/^https?\:\/\//, '').sub(/^www./,''), "#{@listing.website}" %><br>
									</div> 
								</div>
					
				    </div>
					</div>
						
					
					<div class="span3">
							<%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{@listing.latitude},#{@listing.longitude}&zoom=12&size=150x150&markers=red|#{@listing.latitude},#{@listing.longitude}|&maptype=roadmap&sensor=true", :class=> "show-map" %>
				   </div>
				</div>

<%# Adding additional information about this listing %>
		<hr>
		<div class="row-fluid">
			<div class="span2">
			<% if !@listing.hours.blank? -%>
			<div class="listing-attribute-topic">Hours:</div> 
			<div class="listing-attribute"><%= simple_format(@listing.hours) %></div>
			<% end %>
			</div>
		</div>
