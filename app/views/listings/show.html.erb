<div class="row-fluid no-space">
	<div class="span12">
		<div class="category-list">
				<div class="span4 offset2">	

				<div class="box-1-show">
								<%= search_form_for @search, url: area_listings_path(1) do |f| %>
								<div class="search-bar">
									<%= f.text_field :company_or_industry_or_first_name_or_last_name_cont, :class=> "search-css", :placeholder => "Search" %>
								</div>
								<div class="actions"<%= f.submit %> 
								</div>	
								<% end %>
				</div>
				</div>				

				<div class="span4">	
							<div class="box-1-show">
									<%= search_form_for @search, url: area_listings_path(1) do |f| %>
									<div class="search-bar">
										<%= text_field_tag :search, params[:search], :class=> "search-css", :placeholder => "Location" %>
									</div>
									<div class="actions"<%= f.submit %> </div>	
									<% end %>
							</div>				
				</div>					


		</div>

	</div>
</div>

<div class="container">	
	<div class="show-wrapper">
	<div class="row-fluid">
		<div id="listing-list-show">
			<div class="row-fluid">
						
						<div id="listing-name-css">
								<div id="listing-company-css">
									
									<div class="row-fluid">
									<div class="listing-show-headline">
										<%= @listing.company %><br>
									</div>
									</div>
									
									<div class="listing-show-business-info">
										<% if !@listing.address1.blank? -%>
											<%= @listing.address1 %><br>
											<% end %>
											<% if !@listing.address2.blank? -%>
												<%= @listing.address2 %><br>
												<% end %>
												<% if !@listing.city.blank? -%>
													<%= @listing.city %>
													<% end %> 
													<% if !@listing.state.blank? -%>
														<%= @listing.state %>
														<% end %> 
														<% if !@listing.zip_code.blank? -%>
															<%= @listing.zip_code%><br>
															<% end %> 
															<% if !@listing.phone.blank? -%>
																<%= number_to_phone(@listing.phone, area_code: true) %><br>
																<% end %>
																<%= link_to "Website", "#{@listing.website}"%><br>
																	</div> 
					
					
					</div>
						
					<div class="row-fluid">	
						<div class="span3">
								<div class="discount-wrapper">
								<div class="discount-text-spanish">
								<%= @listing.discount %>
								</div>
								<div class="discount-text-english">
								<%= @listing.discount_english %>
								</div>
								</div>
								<a href="#" onclick="window.print();return false;">Print me</a> 
							</div>
					</div>		
	</div>		
</div>	
<%= link_to 'New Listing', new_area_listing_path %><br>
<%= link_to 'Edit', edit_area_listing_path %><br>
<%= link_to 'Destroy', [@listing.area, @listing], :confirm => 'Are you sure?', :method => :delete %>
</div>
</div>