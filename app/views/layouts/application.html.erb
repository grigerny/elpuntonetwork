<!DOCTYPE html>
<html>
<head>
  <title>El Punto Guia</title>
  <%= stylesheet_link_tag    "application", :media => "screen" %>
  <%= stylesheet_link_tag "print", :media => "print" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
<link rel='stylesheet' type='text/css' href='fullcalendar.css' />
<script type='text/javascript' src='jquery.js'></script>
<script type='text/javascript' src='fullcalendar.js'></script>
<script type='text/javascript' src='fullcalendar/gcal.js'></script>
</head>
<body>	
	
	<% if flash[:notice] %>
	<p id="notice"><%= notice %></p>
	 <% end %>

	<div class="fluid-row">
		<div class='span10'>
	
		<% if @home_index %>
			<div class="pure-menu pure-menu-open pure-menu-horizontal">
	    <li class="pure-menu-heading">
		<%= link_to root_path, :class=> "brand-css" do %>
			<%= image_tag ('mainlogo.png') %>
			<% end %>
		</li>
	
	   <% else %>
			<div class="pure-menu pure-menu-open pure-menu-horizontal">
	    <li class="pure-menu-heading">
		<%= link_to categories_path, :class=> "epnlogocss" do %>
			<%= image_tag ('epnlogo.png') %>
	  	<% end %>
	</li>
		<% end %>
	</div>
		</div>
		
		
		<div class="span2">
		
		<% unless @home_index %>	
		<%= link_to "Back to Main Page", root_url %>
		<% end %>
		
		<% if user_signed_in? %>
		  <div class="login-button-wrapper">
		  <strong>Hola <%= current_user.firstname.capitalize %>!</strong><br>
		  ID# <%= current_user.token.upcase %>
		  <%= link_to "Logout", destroy_user_session_path, method: :delete %>
		</div>
		<% else %>
		<div class="login-button-wrapper">
		  <%= link_to new_user_session_path, :class => "login-button" do %>
		  <%= "Member Sign in".upcase%>
		  <% end %>
		</div>
		<% end %>
		
		</div>
		
	</div>	
	
	
	
	
		
<%= yield %>

</div>
</div>

<div class="row-fluid">
	
	<div class="copyright">
	El Punto Media Corp. Copyright 2013
	</div>

	<div class="privacy-policy">	
	<a href="http://www.iubenda.com/privacy-policy/422133" class="iubenda-white iubenda-embed" title="Privacy Policy">Privacy Policy</a><script type="text/javascript">(function (w,d) {var loader = function () {var s = d.createElement("script"), tag = d.getElementsByTagName("script")[0]; s.src = "http://cdn.iubenda.com/iubenda.js"; tag.parentNode.insertBefore(s,tag);}; if(w.addEventListener){w.addEventListener("load", loader, false);}else if(w.attachEvent){w.attachEvent("onload", loader);}else{w.onload = loader;}})(window, document);</script>
	
</div>	

</body>
</html>
