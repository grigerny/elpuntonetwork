<%= form_for @contact_form do |f| %>
 <div class="field">
   <%= f.label :name %>
  <%= f.text_field :name, :required => true %>(required)<br /><br><br>
 </div>
 <div class="field">
  <%= f.label :email %>
  <%= f.email_field :email, :required => true %>(required)
  <br /><br><br>
 </div>

 </div> 
  <div class="field">
  Comments:<br>
<%= f.text_area :message %>
</div>
 <div class="field">
  Submit: <%= f.submit "Create" %>
</div>

<% end %>