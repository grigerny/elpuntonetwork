
<div class="row-fluid">


<div class="row-fluid no-space">
	<div class="span12">

		<div class="category-list">
			<% @categories.sort { |a,b| a.name <=> b.name }.each do |category| %>

			<div class="span3">
			<div class="category-each">
			<%= link_to category,:class => "category-each-button" do %>
			<%= category.name.upcase %>
			</div>
			</div>
			<% end %>
			<% end %>

		</div>

	</div>
	</div>


<div class="row-fluid no-space">
	
		<div class="span3">
			<div class="box-1-show-left">
				</div>
		</div>
		
		<div class="span6">
			<div class="box-1-show">
			</div>	
		</div>
		
		<div class="span3">
			<div class="box-1-show-left">
				</div>
		</div>		
</div>
		
<div class="row-fluid no-space">
		
<div class="span3">	

</div>	

<div class="span6">

	<% @grouped_listing.each do |category, listings| %>
	
	<div class="row-fluid">
	<div class="industry-badge-show">
	<%= category.upcase %>
	</div>
	</div>
	
		<% listings.each do |listing| %>
			<div id="listing-list-show">
					
					<div class="row-fluid">
						
						<div class="span6">
					
							<div id="listing-name-css">
								<div id="listing-company-css">
							<%= link_to listing_path(listing), :class =>"listing-company-css" do %>		
							<%= listing.company %><br>
							<% end %>
							</div>
					<%= listing.first_name %> <%= listing.last_name %> 			
					<br>
					</div>
						<%= listing.address1 %><br>
						<%= listing.address2 %><br>
						<%= listing.city %>, <%= listing.state %> <%= listing.zip_code%><br>
						<%= number_to_phone(listing.phone, area_code: true) %>
						<br>
						<%= link_to "Website", "#{listing.website}"%><br>
						<%= link_to 'Edit', edit_listing_path(listing) %> 
						</div>
						
						<div class="span6">
							<div class="discount-wrapper">
							<div class="discount-text">
							<%= listing.discount %>
							</div>
							</div>
						</div>
							
						</div>
						
			</div>
		
		
		<% end %>
			<% end %>				
				
			
</div>


<div class="span3">

	</div>
	
</div>


	
</div>



